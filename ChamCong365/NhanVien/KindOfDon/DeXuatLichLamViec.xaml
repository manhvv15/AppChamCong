                    <ScrollViewer x:Name="scrollCaLV" Height="300" >
                        <ListView x:Name="lsvCa"  BorderThickness="0"
                                  ItemsSource="{Binding listCa}" PreviewMouseWheel="lsvCa_PreviewMouseWheel">
