<UserControl x:Class="QuanLyChung365TruocDangNhap.RecommendSetting.Popup.Update"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.RecommendSetting.Popup"
             mc:Ignorable="d" 
             >
    <Border x:Name="update" Width="320" Height="90" Background="#FFFFFF" CornerRadius="10" Margin="0 40 80 0" VerticalAlignment="Top" HorizontalAlignment="Right">
        <DockPanel >
            <Border Width="80">
                <Path Data="{DynamicResource tichxanh}" Fill="#00CE2D" Width="68"  HorizontalAlignment="Center" VerticalAlignment="Center"></Path>
            </Border>

            <TextBlock Text="Cập nhật thành công" FontSize="16" Foreground="#757575" TextWrapping="Wrap" FontWeight="Regular" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

        </DockPanel>

    </Border>
</UserControl>
