<UserControl
    x:Class="QuanLyChung365TruocDangNhap.RecommendSetting.Popup.ucSuccess"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.RecommendSetting.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        x:Name="refresh"
        Width="320"
        Height="90"
        Margin="0,40,80,0"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Background="#FFFFFF"
        CornerRadius="10">
        <DockPanel>
            <Border Width="80">
                <Path
                    Width="68"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="{DynamicResource tichxanh}"
                    Fill="#00CE2D" />
            </Border>

            <TextBlock
                Name="tb_Message"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Regular"
                Foreground="#757575"
                Text="Làm mới thời gian duyệt thành công"
                TextWrapping="Wrap" />

        </DockPanel>

    </Border>

</UserControl>
