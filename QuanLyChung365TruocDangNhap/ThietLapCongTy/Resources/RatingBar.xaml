            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Star1RotateTransform2"
                                             Storyboard.TargetProperty="Angle"
                                             To="360" Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button x:Name="Star4" Content="✯" VerticalAlignment="Center" FontSize="50" Click="Star_Click" Background="Transparent" BorderThickness="0" Foreground="#aaa"  Height="80">
            <Button.RenderTransform>
                <RotateTransform x:Name="Star1RotateTransform3" />
