            </Button.Triggers>
        </Button>
        <Button x:Name="Star5" Content="✯" VerticalAlignment="Center" FontSize="50" Click="Star_Click" Background="Transparent" BorderThickness="0" Foreground="#aaa"  Height="80">
            <Button.RenderTransform>
                <RotateTransform x:Name="Star1RotateTransform4" />
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Star1RotateTransform4"
                                             Storyboard.TargetProperty="Angle"
                                             To="360" Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
    </StackPanel>
</UserControl>
