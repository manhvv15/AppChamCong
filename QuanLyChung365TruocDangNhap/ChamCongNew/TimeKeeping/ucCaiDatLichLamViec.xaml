                            x:Name="bodAddCalendar"
                            Width="117"
                            Height="34"
                            Margin="10,0,0,0"
                            Background="#42D778"
                            MouseEnter="bodAddCalendar_MouseEnter"
                            MouseLeave="bodAddCalendar_MouseLeave"
                            MouseLeftButtonUp="bodAddLich_MouseLeftButtonUp"
