                                                                    Margin="10,0,0,0"
                                                                    FontWeight="Medium"
                                                                    Style="{DynamicResource TextBlockLable}">
                                                                    <Run Text="Áp dụng: Tháng" />
                                                                    <Run x:Name="txbApplyMonnth" Text="{Binding apply_month}" />
                                                                </TextBlock>
                                                            </WrapPanel>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </WrapPanel>
            </StackPanel>

            <Grid
                x:Name="popup"
                Background="Transparent"
                MouseLeftButtonUp="popup_MouseLeftButtonUp"
                Visibility="Collapsed" />
            <!--  Boder Lisview Visibility Collapsed Year  -->
            <Border
                x:Name="borNam"
                Width="188"
                Margin="0,114,508,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#ffffff"
                BorderBrush="#474747"
                BorderThickness="1"
                CornerRadius="5"
                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="120" />
                    </Grid.RowDefinitions>
                    <TextBox
                        x:Name="textSearchNam"
                        Grid.Row="0"
                        Margin="3"
                        Background="#ffffff"
                        BorderBrush="#474747"
                        BorderThickness="1"
                        FontSize="16"
                        TextChanged="textSearchNam_TextChanged" />
                    <ScrollViewer
                        x:Name="scrollNam"
                        Grid.Row="1"
                        Height="120">
                        <ListView
                            x:Name="lsvNam"
                            Margin="5,0,0,5"
                            BorderThickness="0"
                            FontSize="16"
                            PreviewMouseWheel="lsvNam_PreviewMouseWheel"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            SelectionChanged="Load">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=ActualWidth}" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border
                                                    x:Name="borNam"
                                                    HorizontalAlignment="Stretch"
                                                    MouseLeftButtonDown="borNam_MouseLeftButtonDown">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Transparent" />
                                                            <Setter Property="TextBlock.Foreground" Value="#000000" />
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#4c5bd4" />
                                                                    <Setter Property="TextBlock.Foreground" Value="#ffffff" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock
                                                        Margin="5,5,0,5"
                                                        FontSize="16"
                                                        Text="{Binding nam}" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                    </ScrollViewer>
                </Grid>
            </Border>
            <!--  Boder Lisview Visibility Collapsed Month  -->
            <Border
                x:Name="borThang"
                Grid.Row="2"
                Width="188"
                Margin="0,114,307,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#ffffff"
                BorderBrush="#474747"
                BorderThickness="1"
                CornerRadius="5"
                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="120" />
                    </Grid.RowDefinitions>
                    <TextBox
                        x:Name="textSearchThang"
                        Grid.Row="0"
                        Margin="3"
                        Background="#ffffff"
                        BorderBrush="#000000"
                        BorderThickness="1"
                        FontSize="16"
                        TextChanged="textSearchThang_TextChanged" />
                    <ScrollViewer
                        x:Name="scrollThang"
                        Grid.Row="1"
                        Height="120">
                        <ListView
                            x:Name="lsvThang"
                            Margin="5,0,0,5"
                            BorderThickness="0"
                            FontSize="16"
                            IsTabStop="False"
                            PreviewMouseWheel="lsvThang_PreviewMouseWheel"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            SelectionChanged="Load">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=ActualWidth}" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="borThang" MouseLeftButtonDown="borThang_MouseLeftButtonDown">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Transparent" />
                                                            <Setter Property="TextBlock.Foreground" Value="#000000" />
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#4c5bd4" />
                                                                    <Setter Property="TextBlock.Foreground" Value="#ffffff" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock
                                                        Margin="5,5,0,5"
                                                        FontSize="16"
                                                        Text="{Binding thang}" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>

