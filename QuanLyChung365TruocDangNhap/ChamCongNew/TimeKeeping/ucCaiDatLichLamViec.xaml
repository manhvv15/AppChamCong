    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.ChamCongNew.TimeKeeping"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaxWidth="1920"
    mc:Ignorable="d">
    <Border Background="#FFFFFF" CornerRadius="10">
        <Grid>
            <StackPanel>

                <Grid Margin="0,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="70" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="1.75*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="20,0,0,0">
                        <Border
                            Width="218"
                            HorizontalAlignment="Left"
                            BorderBrush="#4C5BD4"
                            BorderThickness="0,0,0,2">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                FontFamily="Times New Roman"
                                FontSize="20"
                                FontWeight="DemiBold"
                                Foreground="#4C5BD4"
                                Text="Lịch làm việc chung" />
                        </Border>
                        <Rectangle
                            Height="1"
                            VerticalAlignment="Bottom"
                            Fill="#666666"
                            Opacity="0.5" />
                    </Grid>
                    <WrapPanel
                        Grid.Row="1"
                        Margin="20,0,0,20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <Border
                            Grid.Row="1"
                            Height="32"
                            MinWidth="300"
                            Margin="0,0,10,0"
                            Padding="1"
                            Style="{StaticResource BorderSelected}">
                            <Grid>

                                <ComboBox
                                    x:Name="cboLichLamViec"
                                    Margin="0,0,0,0"
                                    Padding="10,5,10,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    materialDesign:HintAssist.Hint="nhập tên lịch làm việc"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    BorderThickness="0"
                                    DisplayMemberPath="cy_name"
                                    FontSize="16"
                                    Foreground="{StaticResource #474747}"
                                    IsEditable="True"
                                    IsTextSearchEnabled="False"
                                    KeyUp="cboLichLamViec_KeyUp"
                                    PreviewTextInput="cboLichLamViec_PreviewTextInput"
                                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                    SelectedValuePath="cy_id"
                                    SelectionChanged="cboLichLamViec_SelectionChanged"
                                    Style="{StaticResource Combobox1}" />

                            </Grid>

                        </Border>
                        <!--  Select year  -->

                        <Border
                            x:Name="bodHienThiNam"
                            Width="190"
                            Background="Transparent"
                            MouseLeftButtonUp="bodHienThiNam_MouseLeftButtonUp"
                            Style="{StaticResource BorderSelected}">
                            <DockPanel Height="32">
                                <TextBlock
                                    x:Name="txbSelectYear"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center" />
                                <Path
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Data="{StaticResource iconSearchMore}"
                                    Fill="#474747" />
                            </DockPanel>
                        </Border>
                        <!--  Select Month  -->
                        <Border
                            x:Name="bodHienThiThang"
                            Width="190"
                            Margin="10,0,0,0"
                            Background="Transparent"
                            Cursor="Hand"
                            MouseLeftButtonUp="bodHienThiThang_MouseLeftButtonUp"
                            Style="{StaticResource BorderSelected}">
                            <DockPanel Height="32" VerticalAlignment="Top">
                                <TextBlock
                                    x:Name="txbSelectMonth"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center" />
                                <Path
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Data="{StaticResource iconSearchMore}"
                                    Fill="#474747" />
                            </DockPanel>
                        </Border>
                        <!--  Thêm lịch  -->
