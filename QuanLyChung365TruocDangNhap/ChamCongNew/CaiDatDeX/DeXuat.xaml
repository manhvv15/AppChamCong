                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=textNhapTenDeXuat, Path=Text}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
                <DataGrid
x:Name="dgvDeXuat" Margin="0 20 0 0" PreviewMouseWheel="dgvDeXuat_PreviewMouseWheel"
Background="{DynamicResource #FFFFFF}"
Style="{StaticResource DataGrid1}">

                    <DataGrid.Columns>

                        <DataGridTemplateColumn
        Width="1*"
        
        Header="STT">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        FontSize="16"
                        x:Name="stt"
                        Text="{Binding id}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
Width="4*"

Header="Loại đề xuất">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"
                x:Name="loaiDx"
                Text="{Binding dexuat_name}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
Width="2.2*"

Header="Số cấp duyệt">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"
                 x:Name="SoCapDx"
                Text="{Binding confirm_level}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
Width="3*"

Header="Hình thức duyệt">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"
                 x:Name="HinhThucDx"
                Text="{Binding ht_duyet}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
Width="3*"

Header="Giới hạn thời gian">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"
                 x:Name="TimeDx"
                Text="{Binding confirm_time}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
        Width="2*"
        
        Header="Hành động">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>


                                    <Border Background="#1677FF" Width="30" Height="30" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center" MouseLeftButtonUp="Border_MouseLeftButtonUp_2">
                                        <Image Source="{StaticResource edit_2DrawingImageKey}" Width="20"/>
                                    </Border>



                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <tool:Paginator
x:Name="paginNV"
Margin="0,15"
HorizontalAlignment="Center"
DisplayNumber="10"
SelectionChange="paginNV_SelectionChange" />
            </StackPanel>
            <StackPanel Margin="0 20 0 0" x:Name="stackNhanVien" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0 0 10 0">
                        <TextBlock Text="Tên tổ chức" FontSize="16" Foreground="#474747"></TextBlock>
                        <Border Cursor="Hand" Background="Transparent" MouseLeftButtonUp="TToChuc_MouseLeftButtonUp" Margin="0 10 0 0" Height="42" x:Name="TToChuc" CornerRadius="5" BorderThickness="1" BorderBrush="#474747"  Visibility="Visible"  >
                            <Grid>
                                <TextBox Background="Transparent" Height="42" TextChanged="textChonToChuc_TextChanged"  x:Name="textChonToChuc" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="10 10 0 0" Grid.ColumnSpan="3"/>
                                <TextBlock FontSize="16" Foreground="{DynamicResource #666666}" x:Name="textChonToChuc1" TextWrapping="Wrap" Text="Chọn"  IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0" Grid.ColumnSpan="3">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=textNhapTenDeXuat, Path=Text}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Image Margin="0 0 10 0" Source="{StaticResource Frame_635607DrawingImageKey}" Width="10" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.848"></Image>

                            </Grid>


                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="0 0 10 0">
                        <TextBlock Text="Vị Trí" FontSize="16" Foreground="#474747"></TextBlock>
                        <Border Cursor="Hand" Background="Transparent" MouseLeftButtonUp="ViTri_MouseLeftButtonUp" Margin="0 10 0 0" Height="42" x:Name="ViTri" CornerRadius="5" BorderThickness="1" BorderBrush="#474747"  Visibility="Visible"  >
                            <Grid>
                                <TextBox Background="Transparent" Height="42" TextChanged="textChonViTri_TextChanged" x:Name="textChonViTri" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="10 10 0 0" Grid.ColumnSpan="3"/>
                                <TextBlock FontSize="16" x:Name="textChonViTri1" Foreground="{DynamicResource #666666}" TextWrapping="Wrap" Text="Chọn"  IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0" Grid.ColumnSpan="3">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=textChonViTri, Path=Text}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Image Margin="0 0 10 0" Source="{StaticResource Frame_635607DrawingImageKey}" Width="10" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.848"></Image>

                            </Grid>

                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0 0 10 0">
                        <TextBlock Text="Họ và tên" FontSize="16" Foreground="#474747"></TextBlock>
                        <Border Cursor="Hand" Background="Transparent" MouseLeftButtonUp="ViTri_MaouseLeftButtonUp" Margin="0 10 0 0" Height="42" x:Name="Ten" CornerRadius="5" BorderThickness="1" BorderBrush="#474747"  Visibility="Visible"  >
                            <Grid>
                                <TextBox Background="Transparent" Height="42" TextChanged="textName_TextChanged" x:Name="textName" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="10 10 0 0" Grid.ColumnSpan="3"/>
                                <TextBlock FontSize="16" Foreground="{DynamicResource #666666}" x:Name="textName1" TextWrapping="Wrap" Text="Họ và tên"  IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0" Grid.ColumnSpan="3">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=textName, Path=Text}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Image Margin="0 0 10 0" Source="{StaticResource Frame_635607DrawingImageKey}" Width="10" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.848"></Image>

                            </Grid>

                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <Border Grid.Column="4" Margin="10 30 0 0" BorderThickness="1" Height="42" BorderBrush="#a9a9a9" CornerRadius="10" Background="#1677FF">
                            <DockPanel HorizontalAlignment="Center">
                                <Path Data="{DynamicResource timKiem}" Fill="White" VerticalAlignment="Center" Height="18" Margin="10 0 0 0" HorizontalAlignment="Left"></Path>
                                <TextBlock Margin="10 0 0 0" Text="Tìm kiếm" FontSize="14" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>
                    </StackPanel>
                </Grid>
                <DataGrid PreviewMouseWheel="dgvNV_PreviewMouseWheel"
x:Name="dgvNV" Margin="0 20 0 0"
Background="{DynamicResource #FFFFFF}"
Style="{StaticResource DataGrid1}">

                    <DataGrid.Columns>

                        <DataGridTemplateColumn
        Width="1*"
        
        Header="ID">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        FontSize="16"
                        
                        Text="{Binding ep_id}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
Width="3*"

Header="Họ và tên">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <Border
    Margin="20,0,0,0"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Style="{StaticResource BorderImage}">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding avatarUser}" />

                                                <!--<ImageBrush ImageSource="{Binding avatarUser}" />-->
                                            </Border.Background>
                                        </Border>

                                        <TextBlock
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"
                
                Text="{Binding userName}" />
                                    </DockPanel>

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
Width="3*"

Header="Tổ chức">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"
                
                Text="{Binding organizeDetailName}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
Width="3*"

Header="Chức vụ">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <TextBlock
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"
                
                Text="{Binding positionName}" />

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
        Width="2*"
        
        Header="Chi tiết">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Cursor="Hand" x:Name="borChiTiet" MouseLeftButtonUp="borChiTiet_MouseLeftButtonUp">
                                        <TextBlock  Text="Xem chi tiết" FontSize="14" Foreground="#1677FF" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

                                    </Border>

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <tool:Paginator
x:Name="paginNV1"
Margin="0,15"
HorizontalAlignment="Center"
DisplayNumber="10"
SelectionChange="paginNV1_SelectionChange" />
            </StackPanel>
        </StackPanel>
        <Grid Visibility="Collapsed" x:Name="edit_dexuat" Margin="0">
            <Rectangle Opacity="0.5" MouseLeftButtonUp="Rectangle_MouseLeftButtonUp" Fill="#474747"></Rectangle>

            <Border CornerRadius="10" Width="520" Height="470" Background="White" VerticalAlignment="Top" Margin="0 50 0 0" HorizontalAlignment="Center">
                <StackPanel Margin="20">
                    <Border CornerRadius="10 10 0 0" Margin="-20 -20 -20 0"  Background="#4C5BD4" Cursor="Hand" MouseLeftButtonUp="Border_MouseLeftutton" >
                        <DockPanel  Height="54" Margin="20 0 0 0">

                            <TextBlock Text="Chỉnh sửa đề xuất" FontSize="20" Foreground="#FFFFFF" VerticalAlignment="Center"></TextBlock>
                            <Image Source="{StaticResource tabler_plusDrawingImageKey}" HorizontalAlignment="Left" Margin="20 0 0 0" Height="24"></Image>
                        </DockPanel>
                    </Border>
                    <TextBlock Margin="0 10 0 5" Text="Danh sách đề xuất" FontSize="16" FontWeight="DemiBold"></TextBlock>
                    <Border  BorderThickness="1" CornerRadius="5" BorderBrush="#ACACAC" Height="42">
                        <TextBlock x:Name="txtDon" Text="Đơn xin nghỉ phép" FontSize="16" VerticalAlignment="Center" Margin="10 0 0 0"></TextBlock>
                    </Border>
                    <TextBlock Margin="0 10 0 5" Text="Số cấp duyệt" FontSize="16" FontWeight="DemiBold"></TextBlock>
                    <Border  BorderThickness="1" CornerRadius="5" BorderBrush="#ACACAC" Height="42">
                        <Grid>
                            <TextBox Background="Transparent" PreviewTextInput="AllowOnlyNumbers" Height="40"  x:Name="textSoCap" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="10 10 0 0" Grid.ColumnSpan="3"/>
                            <TextBlock FontSize="16" Foreground="{DynamicResource #666666}" TextWrapping="Wrap" Text="Số cấp duyệt"  IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0" Grid.ColumnSpan="3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=textSoCap, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                    <TextBlock Margin="0 10 0 5" Text="Hình thức duyệt" FontSize="16" FontWeight="DemiBold"></TextBlock>
                    <Grid>
                        <ComboBox x:Name="ComboBox" FontSize="16"  Margin="0 5 0 0" Style="{DynamicResource Combobox2}" ItemContainerStyle="{DynamicResource ComboboxItem2}">
                            <ComboBoxItem IsSelected="True">Duyệt lần lượt</ComboBoxItem>
                            <ComboBoxItem>Duyệt đồng thời</ComboBoxItem>
                            <ComboBoxItem>Duyệt lần lượt và đồng thời</ComboBoxItem>
                        </ComboBox>
                        <Image Margin="0 0 10 0" Source="{StaticResource Frame_635607DrawingImageKey}" Width="10" HorizontalAlignment="Right"></Image>

                    </Grid>
                    <TextBlock Margin="0 10 0 5" Text="Giới hạn thời gian duyệt" FontSize="16" FontWeight="DemiBold"></TextBlock>
                    <Border  BorderThickness="1" CornerRadius="5" BorderBrush="#ACACAC" Height="42">
                        <Grid>
                            <TextBox Background="Transparent" PreviewTextInput="AllowOnlyNumbers" Height="40"  x:Name="textTime" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="10 10 0 0" Grid.ColumnSpan="3"/>
                            <TextBlock FontSize="16" Foreground="{DynamicResource #666666}" TextWrapping="Wrap" Text="Số cấp duyệt"  IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0" Grid.ColumnSpan="3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=textTime, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Margin="0 0 10 0" VerticalAlignment="Center" Text="Giờ" FontSize="16" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </Border>
                    <DockPanel  Margin="0 20 0 0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Height="43" Width="173" CornerRadius="15" BorderThickness="1" BorderBrush="#a9a9a9" HorizontalAlignment="Center"  MouseLeftButtonUp="huy">
                                <TextBlock Text="Hủy" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4C5BD4" FontWeight="DemiBold"></TextBlock>
                            </Border>
                            <Border Margin="30 0 0 0" Height="43" Width="173" CornerRadius="15" BorderThickness="1" Background="#4C5BD4" HorizontalAlignment="Center"  MouseLeftButtonUp="Luu">
                                <TextBlock Text="Lưu" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFFFF" FontWeight="DemiBold"></TextBlock>
                            </Border>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Visibility="Collapsed" x:Name="caidatDx" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 50 0 0">

            <Rectangle Opacity="0.5" Margin="-2000" Fill="#474747" MouseLeftButtonUp="Rectangle_MouseLeftButtonUp_5"></Rectangle>
            <Grid >
                <Border  Width="520" Background="White" VerticalAlignment="Center" Margin="20" CornerRadius="10">


                    <StackPanel Margin="20">
                        <Border CornerRadius="10 10 0 0"  Background="#4C5BD4" Cursor="Hand" Margin="-20 -20 -20 0" MouseLeftButtonUp="Border_MouseLeftButtonUp_4">
                            <DockPanel Height="54" Margin="20 0 0 0">

                                <TextBlock Text="Cài đặt đề xuất" FontSize="20" Foreground="#FFFFFF" VerticalAlignment="Center"></TextBlock>
