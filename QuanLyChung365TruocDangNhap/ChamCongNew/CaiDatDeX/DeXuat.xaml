<UserControl x:Class="QuanLyChung365TruocDangNhap.ChamCongNew.CaiDatDeX.DeXuat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChung365TruocDangNhap.ChamCongNew.CaiDatDeX"
             mc:Ignorable="d" 
            xmlns:tool="clr-namespace:QuanLyChung365TruocDangNhap.ChamCongNew.GioiHanIpVaPhanMem.Tools"
           Width="1000"  >
    <Grid Background="WhiteSmoke" >
        <StackPanel Visibility="Visible" x:Name="main_dexuat">
            <StackPanel Orientation="Horizontal">
                <Border x:Name="borDx_" Background="#4C5DB4" Height="40" Width="130" MouseLeftButtonUp="Border_MouseLeftButtonUp_1" CornerRadius="10">
                    <TextBlock x:Name="txtDx_" Text="Đề xuất" FontSize="18" Foreground="#FFFFFF" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                </Border>
                <Border x:Name="bornv_" Margin="20 0 0 0" Background="#E4E7FF" Height="40" Width="130" CornerRadius="10" MouseLeftButtonUp="Border_MouseLeftButtonUp">
                    <TextBlock x:Name="txtNv_" Text="Nhân viên" FontSize="18" Foreground="#4C5DB4" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                </Border>
            </StackPanel>

            <Border MouseLeftButtonUp="Border_MouseLeftButtonUp_3" Margin="0 20 0 0" Background="#4C5DB4" Height="40" Width="110" CornerRadius="10" HorizontalAlignment="Left">
                <DockPanel>
                    <Image Source="/CaiDatDeX/iconCaiDat.png" Height="18" Margin="10 0 10 0" VerticalAlignment="Center"></Image>
                    <TextBlock Text="Cài đặt" FontSize="18" Foreground="#FFFFFF" FontWeight="DemiBold" VerticalAlignment="Center"  ></TextBlock>
                </DockPanel>
            </Border>
            <StackPanel x:Name="stackDeXuat">


                <Border Width="400" Margin="0 20 0 0" BorderThickness="1" CornerRadius="5" BorderBrush="#ACACAC" Height="42" HorizontalAlignment="Left">
                    <Grid>
                        <TextBox Background="Transparent" Height="40" TextChanged="textNhapTenDeXuat_TextChanged" x:Name="textNhapTenDeXuat" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="10 10 0 0" Grid.ColumnSpan="3"/>
