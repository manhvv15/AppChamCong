                                        MinWidth="250"
                                        Margin="20,0,0,0"
                                        Background="Transparent"
                                        Cursor="Hand">
                                        <TextBlock Style="{DynamicResource TextBlocLableNV}">
                                            <Run Text="Tổ chức" />
                                            <Run Foreground="#FF5B4D" Text="*" />
                                        </TextBlock>
                                        <Border
                                            Grid.Row="1"
                                            Height="40"
                                            Margin="0,5,0,0"
                                            Padding="1"
                                            BorderBrush="#666666"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <Grid>
                                                <Image
                                                    Width="10"
                                                    Height="12"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    Opacity="0.8"
                                                    Source="{StaticResource iconDropDownDrawingImage}" />

                                                <ComboBox
                                                    x:Name="cboTenToChuc"
                                                    Padding="10,5,10,0"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    materialDesign:HintAssist.Hint="Chọn"
                                                    Background="Transparent"
                                                    BorderBrush="{x:Null}"
                                                    DisplayMemberPath="organizeDetailName"
                                                    FontSize="16"
                                                    Foreground="{StaticResource #474747}"
                                                    IsEditable="True"
                                                    IsTextSearchEnabled="False"
                                                    KeyUp="cboTenToChuc_KeyUp"
                                                    PreviewTextInput="cboTenToChuc_PreviewTextInput"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                                    SelectedValuePath="id"
                                                    Style="{StaticResource Combobox1}" />

                                            </Grid>

                                        </Border>
                                        <TextBlock
                                            x:Name="tb_ValidateTenToChuc"
                                            Foreground="#FF5B4D"
                                            Style="{DynamicResource TextBlocLableNV}"
                                            Visibility="Collapsed" />
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0,10,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel  MaxWidth="0250"
                                        Grid.Column="0"
                                        MinWidth="250"
                                        Margin="0,0,0,0"
                                        Background="Transparent"
                                        Cursor="Hand">
                                        <TextBlock Style="{DynamicResource TextBlocLableNV}">
                                            <Run Text="Chức vụ" />
                                            <Run Foreground="#FF5B4D" Text="*" />
                                        </TextBlock>
                                        <Border
                                            Grid.Row="1"
                                            Height="40"
                                            Margin="0,5,0,0"
                                            Padding="1"
                                            BorderBrush="#666666"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <Grid>
                                                <Image
                                                    Width="10"
                                                    Height="12"
                                                    Margin="10"
                                                    HorizontalAlignment="Right"
                                                    Opacity="0.8"
                                                    Source="{StaticResource iconDropDownDrawingImage}" />

                                                <ComboBox
                                                    x:Name="cboViTri" 
                                                    Padding="10,5,10,0"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    materialDesign:HintAssist.Hint="Chọn"
                                                    Background="Transparent"
                                                    BorderBrush="{x:Null}"
                                                    DisplayMemberPath="positionName"
                                                    FontSize="16"
                                                    Foreground="{StaticResource #474747}"
                                                    IsEditable="True"
                                                    IsTextSearchEnabled="False"
                                                    KeyUp="cboViTri_KeyUp"
                                                    PreviewTextInput="cboViTri_PreviewTextInput"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                                    SelectedValuePath="id"
                                                    Style="{StaticResource Combobox1}" />

                                            </Grid>

                                        </Border>

                                        <TextBlock
                                            x:Name="tb_ValidateViTri"
                                            Foreground="#FF5B4D"
                                            Style="{DynamicResource TextBlocLableNV}"
                                            Visibility="Collapsed" />
                                    </StackPanel>
                                    <StackPanel MaxWidth="0250" Grid.Column="1" Margin="20,0,0,0">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            FontSize="16"
                                            FontWeight="Regular"
                                            Style="{DynamicResource TextBlockCalenda}">
                                            <Run Foreground="#474747" Text="Ngày bắt đầu làm" />
                                            <Run Foreground="#FF5B4D" Text="*" />
                                        </TextBlock>
                                        <Border
                                            Height="37"
                                            MinWidth="250"
                                            Margin="0,5,0,0"
                                            BorderBrush="{DynamicResource #666666}"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <comon:DatePicker
                                                x:Name="dpStartWork"
                                                VerticalAlignment="Center"
                                                Background="{DynamicResource #FFFFFF}"
                                                BorderThickness="0"
                                                CornerRadius="5"
                                                FontSize="14"
                                                Foreground="{DynamicResource #474747}"
                                                TabIndex="1000" />
                                        </Border>
                                        <TextBlock
                                            x:Name="tb_ValidateStartWork"
                                            Foreground="#FF5B4D"
                                            Style="{DynamicResource TextBlocLableNV}"
                                            Visibility="Collapsed" />
                                    </StackPanel>
                                </Grid>
                                <WrapPanel HorizontalAlignment="Center">
                                    <Border
                                        x:Name="bodQuayLai"
                                        Width="150"
                                        Height="34"
                                        Margin="0,20,30,0"
                                        HorizontalAlignment="Center"
                                        Background="#FFFFFF"
                                        BorderBrush="#4C5DB4"
                                        BorderThickness="1"
                                        Cursor="Hand"
                                        MouseEnter="bodQuayLai_MouseEnter"
                                        MouseLeave="bodQuayLai_MouseLeave"
                                        MouseLeftButtonUp="bodQuayLai_MouseLeftButtonUp"
                                        Style="{DynamicResource BorderButon}">
                                        <TextBlock
                                            x:Name="tb_QuayLai"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Medium"
                                            Foreground="#474747"
                                            Text="Quay Lại" />
                                    </Border>
                                    <Border
                                        x:Name="bodLuuThongTinNhanVien"
                                        Width="150"
                                        Height="34"
                                        Margin="30,20,0,0"
                                        HorizontalAlignment="Center"
                                        Cursor="Hand"
                                        MouseEnter="bodLuuThongTinNhanVien_MouseEnter"
                                        MouseLeave="bodLuuThongTinNhanVien_MouseLeave"
                                        MouseLeftButtonUp="bodLuuThongTinNhanVien_MouseLeftButtonUp"
                                        Style="{DynamicResource BorderButon}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Medium"
                                            Foreground="#FFFFFF"
                                            Text="Cập nhật" />
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>

</UserControl>
