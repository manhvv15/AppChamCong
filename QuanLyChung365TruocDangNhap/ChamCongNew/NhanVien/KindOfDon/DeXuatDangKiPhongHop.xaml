                            <TextBox x:Name="textNhapTenDeXuat" Background="Transparent" Height="40"  FontSize="15"  Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="10 10 0 0" Grid.ColumnSpan="3"/>
