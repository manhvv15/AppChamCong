                            <DockPanel>
                                <TextBlock x:Name="txbTimePicker2" Margin="10 0 0 0" Text="{Binding Path=Text, ElementName=timepicker2}"  FontSize="16" Foreground="#474747" VerticalAlignment="Center">

                                </TextBlock>
                                <Image Margin="0 0 10 0" Source="{StaticResource ClockDrawingImageKey}" Width="20" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.848"></Image>
                            </DockPanel>

                        </Border>
                        <TextBlock Margin="10 0 0 0" x:Name="validateTime2" FontSize="14" Foreground="#FF5B4D" FontWeight="Regular"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0 0 0 0">
                    <DockPanel>
                        <TextBlock Text="Chọn ngày kết thúc" FontSize="16" Foreground="#474747" FontWeight="DemiBold" Margin="10 0 0 0"></TextBlock>
