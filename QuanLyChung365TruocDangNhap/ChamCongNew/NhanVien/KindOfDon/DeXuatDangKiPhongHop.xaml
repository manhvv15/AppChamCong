                            <TextBlock x:Name="txtphonghop"  Text="Phòng họp" FontSize="16" Foreground="#474747" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0"/>
                            <Image Margin="0 0 10 0" Source="{StaticResource Frame_635607DrawingImageKey}" Width="11" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.862"></Image>

                        </DockPanel>
                    </Border>
                    <TextBlock Margin="10 0 0 0" x:Name="validatePH" FontSize="14" Foreground="#FF5B4D" FontWeight="Regular"/>
