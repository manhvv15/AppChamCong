                            BorderBrush="#474747"
                            BorderThickness="1"
                            CornerRadius="5"
                            Cursor="Hand"
                            MouseLeftButtonUp="Border_MouseLeftBduttonUp_1"
                            Visibility="Visible">
                            <DockPanel Height="42">
                                <TextBlock
                                    x:Name="txtluong"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="#474747"
                                    Text="Không lương" />

                                <Image
