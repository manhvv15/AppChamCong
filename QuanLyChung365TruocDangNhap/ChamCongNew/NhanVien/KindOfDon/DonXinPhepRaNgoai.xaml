                        Height="18.62"
                        Margin="10,0,0,0"
                        FontSize="14"
                        FontWeight="Regular"
                        Foreground="#FF5B4D" />
                </StackPanel>
            </Grid>
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#474747"
                            Text="Ca làm việc" />
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#FF5B4D"
                            Text="*" />
                    </DockPanel>
                    <Grid x:Name="GridCa" Cursor="Hand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55*" />
                            <ColumnDefinition Width="107*" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.ColumnSpan="2"
                            Margin="10,0,0,0"
                            Background="Transparent"
                            BorderBrush="#474747"
                            BorderThickness="1"
                            CornerRadius="5"
                            Cursor="Hand"
                            MouseLeftButtonUp="Border_MouseLeftButtonUp_1"
                            Visibility="Visible">
                            <DockPanel Height="42">
                                <TextBlock
                                    x:Name="txtchonca"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="#474747"
                                    Text="Chọn ca làm việc" />

                                <Image
                                    Width="11"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    RenderTransformOrigin="0.5,0.862"
                                    Source="{StaticResource Frame_635607DrawingImageKey}" />
                            </DockPanel>
                        </Border>
                    </Grid>
                    <TextBlock
                        x:Name="validateCaLV"
                        Height="18.62"
                        Margin="10,0,0,0"
                        FontSize="14"
                        FontWeight="Regular"
                        Foreground="#FF5B4D" />
                    <TextBlock
                        x:Name="validateCaLV1"
                        Height="18.62"
                        Margin="10,0,0,0"
                        FontSize="14"
                        FontWeight="Regular"
                        Foreground="#4C5BD4"
                        Text="Hãy chọn ngày nghỉ(ngày có lịch làm việc) trước" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#474747"
                            Text="Thời gian ra ngoài" />
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#FF5B4D"
                            Text="*" />
                    </DockPanel>
                    <Border
                        Height="42"
                        Margin="10,0,0,0"
                        BorderBrush="#474747"
                        BorderThickness="1"
                        CornerRadius="5"
