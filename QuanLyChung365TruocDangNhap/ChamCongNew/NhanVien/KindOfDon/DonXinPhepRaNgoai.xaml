                                Foreground="{DynamicResource #666666}"
                                IsHitTestVisible="False"
                                Text="Nhập lý do ra ngoài"
                                TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=textNhapLiDo, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                    </DockPanel>
                </Border>
                <TextBlock
                    x:Name="validateLyDo"
                    Height="18.62"
                    Margin="10,0,0,0"
                    FontSize="14"
                    FontWeight="Regular"
                    Foreground="#FF5B4D" />
            </StackPanel>
            <Grid Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
