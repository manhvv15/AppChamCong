                        Cursor="Hand"
                        MouseLeftButtonUp="grNgD1">

                        <Border
                            x:Name="borXD1"
                            Padding="10"
                            VerticalAlignment="Center"
                            BorderBrush="#ACACAC"
                            BorderThickness="1"
                            CornerRadius="5">
                            <WrapPanel VerticalAlignment="Center">
                                <ListView
                                    x:Name="listXetDuyt"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Background="WhiteSmoke"
                                    BorderThickness="0"
                                    ItemsSource="{Binding ListXet}"
                                    Loaded="ListView_Loaded"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    Visibility="Collapsed">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <WrapPanel Background="#dcdcdc">
                                                <DockPanel>
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        Foreground="#474747"
                                                        Text="{Binding userName}" />
                                                    <Border
                                                        x:Name="xoaAnh"
                                                        Background="#dcdcdc"
                                                        Cursor="Hand"
