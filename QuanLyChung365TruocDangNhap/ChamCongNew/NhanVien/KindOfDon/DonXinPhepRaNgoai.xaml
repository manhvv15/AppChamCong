                        </Border>
                        <Image
                            Width="10"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Right"
                            Source="{StaticResource Frame_635607DrawingImageKey}" />
                    </Grid>
                    <TextBlock
                        x:Name="validateKieuDuyet"
                        Height="18.62"
                        FontSize="14"
                        FontWeight="Regular"
                        Foreground="#FF5B4D"
                        Visibility="Collapsed" />

                </StackPanel>
                <StackPanel Grid.Column="1">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#474747"
                            Text="Ngày nghỉ" />
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#FF5B4D"
                            Text="*" />
                    </DockPanel>
                    <Border
