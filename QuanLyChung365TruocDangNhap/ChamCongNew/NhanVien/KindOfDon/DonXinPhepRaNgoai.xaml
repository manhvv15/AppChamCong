                        <DockPanel>
                            <TextBlock
                                x:Name="txtRangoai"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="#474747"
                                Text="{Binding Path=Text, ElementName=timepicker1}" />
                            <Image
                                Width="20"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                RenderTransformOrigin="0.5,0.848"
                                Source="{StaticResource ClockDrawingImageKey}" />
                        </DockPanel>

                    </Border>
                    <TextBlock
                        x:Name="validateRaNgoai"
                        Margin="10,0,0,0"
                        FontSize="14"
                        FontWeight="Regular"
                        Foreground="#FF5B4D"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#474747"
                            Text="Thời gian quay lại" />
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="#FF5B4D"
                            Text="*" />
                    </DockPanel>

                    <Border
                        Height="42"
                        Margin="10,0,0,0"
                        BorderBrush="#474747"
                        BorderThickness="1"
