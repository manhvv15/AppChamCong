                                FontSize="16"
                                Foreground="#474747"
                                Text="{Binding Path=Text, ElementName=timepicker2}" />
                            <Image
                                Width="20"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                RenderTransformOrigin="0.5,0.848"
                                Source="{StaticResource ClockDrawingImageKey}" />
                        </DockPanel>

                    </Border>
                    <TextBlock
                        x:Name="validateQuayLai"
                        Height="18.62"
                        Margin="10,0,0,0"
                        FontSize="14"
